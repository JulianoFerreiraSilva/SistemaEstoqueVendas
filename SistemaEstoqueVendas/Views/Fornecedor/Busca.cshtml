@model SistemaEstoqueVendas.Models.Fornecedor
@{
    Layout = "~/Views/Shared/_LayoutFornecedor.cshtml";
}

<!--Pagina onde exibe detalhes do fornecedor-->
<div>
    <fieldset>
        <legend>Fornecedor</legend>

        <table class="table table-responsive">
            <tr>
                <label><b>Cod: </b></label>
                @Html.DisplayFor(model => model.Id)
            </tr>
            <br />

            <tr>
                <label><b>Nome: </b></label>
                @Html.DisplayFor(model => model.Nome)
                &ensp;&ensp;

                <label><b>Cnpj: </b></label>
                @Html.DisplayFor(model => model.CNPJ)
            </tr>
            <br />

            <tr>
                <label><b>Endereço: </b></label>
                @Html.DisplayFor(model => model.Endereco)
                &ensp;&ensp;

                <label><b>Telefone: </b></label>
                @Html.DisplayFor(model => model.Telefone)
                &ensp;&ensp;
            </tr>
            <br />

            <tr>
                <label><b>Email: </b></label>
                @Html.DisplayFor(model => model.Email)
            </tr>
        </table>
    </fieldset>
</div>

<ul class="nav nav-pills bottom-right">
    <li>@Html.ActionLink("Editar", "Editar", new { id = Model.Id })</li>
    <li>@Html.ActionLink("Excluir", "Excluir", new { id = Model.Id })</li>
    <li class="pull-right">@Html.ActionLink("Voltar", "Index")</li>
</ul>






