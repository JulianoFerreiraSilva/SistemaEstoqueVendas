@model SistemaEstoqueVendas.Models.Produto

@{
    Layout = "~/Views/Shared/_LayoutProduto.cshtml";
}
<!DOCTYPE html>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <legend>Editar Produto</legend>

    @Html.ValidationSummary(true)

    <label id="cod">Cod: </label>
    @Html.DisplayFor(model => model.Id)
    <br />

        <label id="nome">Nome: </label>
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nome)
        <br />

        <label id="qtdCaixa">Caixa Com: </label>
        @Html.EditorFor(model => model.QuantCaixa, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.QuantCaixa)
        <br />

        <label id="qtdEstoque">Quant. Estoque: </label>
        @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Quantidade)
        <br />

        <label>Valor Unitario: </label>
        @Html.EditorFor(model => Model.Valor, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Valor)
        <br />

        <label>Fornecedor: </label>
        @Html.DropDownListFor(model => model.FornecedorId, new SelectList(ViewBag.Fornecedores, "Id", "Nome"), new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Fornecedor)
        <br />

        <input type="submit" value="Enviar" class="btn btn-default" />
        <ul class="nav nav-pills pull-right">
            <li>@Html.ActionLink("Voltar", "Index")</li>
        </ul>
}